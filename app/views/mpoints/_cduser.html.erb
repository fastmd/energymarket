<% provide(:title, 'Показания') %>

<nav class="navbar">
  <ul class="nav nav-pills pull-left">
    <li><%= link_to "Назад", if @met.nil? then company_path(@mp.company.id) else meters_index_path(:id => @mp.id) end , :class => "glyphicon glyphicon-level-up" %></li>
  </ul>  
</nav>

<ul class="breadcrumb">
  <li><%= link_to "Поставщики", welcome_index_path, :class => "glyphicon glyphicon-home" %></li>	
  <li><%= link_to "Поставщик: #{@mp.company.furnizor.name}", companies_index_path(:id => @cp.furnizor_id), :class => "glyphicon glyphicon-piggy-bank" %></li>
  <li><%= link_to "Потребитель: #{@mp.company.name}", company_path(@mp.company.id), :class => "glyphicon glyphicon-lamp" %></li>
  <% if !@met.nil? %>
    <li><%= link_to "Точка учета: #{@mp.messtation} / #{@mp.clsstation}, #{@mp.meconname} / #{@mp.clconname}", meters_index_path(:id => @mp.id), :class => "glyphicon glyphicon-object-align-horizontal" %></li>
    <li class="active"><span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span>
  	    <strong><%= "Счетчик: #{@met.meternum}" %></strong></li>
  <% else %>
    <li class="active"><span class="glyphicon glyphicon-object-align-horizontal" aria-hidden="true"></span>
  	    <strong><%= "Точка учета: #{@mp.messtation} / #{@mp.clsstation}, #{@mp.meconname} / #{@mp.clconname}" %></strong></li>
  <% end %>
</ul>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class = "glyphicon glyphicon-wrench">
          <% if @flag=='mvedit' %>  
              Редактировать показания
          <% else %>
              Добавить показания 
          <% end %>
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse <%= if (@flag!='mvedit' && @flag!='mvadd') then "collapse" end %>" role="tabpanel" aria-labelledby="headingOne">	
      <div class="panel-body">
	  <center>
	  <% if @mets.empty? %>
		<div class="alert alert-danger" role="alert">
  			<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  			<span class="sr-only">Error:</span>
  			У данной точки учета нет счетчиков
		</div>
	  <% else %> 	
		<h3 align="center">
          <% if @flag=='mvedit' %>  			
			Редактирование показаний
          <% else  %>
            Ввод новых показаний
          <% end %>			
		</h3>
		<%= form_for([@mp,@mp.mvalues.build]) do |f| %>
			<table class="table table-striped">
				<thead>
					<tr>
		   				<th>Дата актирования</th>
		   				<th>Счетчик</th>
		   				<th>1.8.0</th>
		   				<th>2.8.0</th>
		   				<th>3.8.0</th>
		   				<th>4.8.0</th>
		   				<th>5.8.0</th>
		   				<th>8.8.0</th>
		   				<th>Комментарий</th>
		   				<th><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
		   				<th><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></th>
					</tr>	
				</thead>
				<tbody>
	   				<tr>		
						<td><%= date_field_tag 'actdate', @mv_params[:actdate] %></td>
						<td><%= select_tag 'meter_id', options_for_select(@mets, @mv_params[:meter_id]) %></td>
						<td><%= number_field_tag 'actp180', @mv_params[:actp180], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= number_field_tag 'actp280', @mv_params[:actp280], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= number_field_tag 'actp380', @mv_params[:actp380], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= number_field_tag 'actp480', @mv_params[:actp480], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= number_field_tag 'actp580', @mv_params[:actp580], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= number_field_tag 'actp880', @mv_params[:actp880], min: 0, max: 1000000, step: 0.0001 %></td>
						<td><%= text_field_tag 'comment', @mv_params[:comment], placeholder: 'Комментарий...' %></td>
						<td><%= check_box_tag 'f', 'yes', if (@mv_params[:f])=='true' then 'yes' else nil end  %></td>
						<td><%= check_box_tag 'r', 'yes', if (@mv_params[:r])=='true' then 'yes' else nil end  %></td>				        
	   				</tr>
				</tbody>
			</table>
			<%= hidden_field_tag :mpoint_id, @mp.id %>
			<%= hidden_field_tag :met, unless @met.nil? then @met.id else nil end %>
			<%= hidden_field_tag :mv_id, @mv_params[:mv_id]%>
            <div  align="center"> 
			  <%= button_tag "Сохранить", type: 'submit', class: "btn btn-default glyphicon glyphicon-ok pull-center", 
			                data: { confirm: "Сохранить данные для #{@mp.company.name}, #{@mp.messtation} / #{@mp.clsstation}, #{@mp.meconname} / #{@mp.clconname}?" } %>                            	                
			  <%= button_tag "Отмена", type: "submit", name: "cancel", value: true, class: "btn btn-default glyphicon glyphicon-remove pull-center" %>
            </div> 			                
		<% end %>
	  <% end %>
	  </center>
      </div>
    </div>
  </div>  
</div>
			
<h3 align="center">История показаний <%= image_tag('indicii.png', :alt => "Показания", :width => 60, :height => 30) %></h3>

<table class="table table-striped  table-hover">
	<thead>
		<tr class="info">
		   <th>№</th>
		   <th>Дата актирования</th>
		   <th>Счетчик</th>
		   <th>1.8.0</th>
		   <th>2.8.0</th>
		   <th>3.8.0</th>
		   <th>4.8.0</th>
		   <th>5.8.0</th>
		   <th>8.8.0</th>
		   <th>Комментарий</th>
		   <th><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
		   <th><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></th>
		   <th>.........</th>
		</tr>	
	</thead>
	<tbody>					
	  <% i = 0%>
	  <% if !@mvs.nil? %>
			<% @mvs.each do |item| %>
			   <% if item.updated_at > (Time.now.ago($GreenDelay)) %>
			    <tr class="success">
			   <% else %> 	
				<tr>
			   <% end %>		
					<% i = i + 1 %>
					<td><%= if params[:page].nil? then i else (params[:page].to_i - 1) * @perpage + i end  %></td>
					<td><%= item.actdate.to_formatted_s(:day_month_year) %></td>
				    <td><%= item.meter.meternum %>(<%= if !item.meter.relevance_date.nil? then item.meter.relevance_date.to_formatted_s(:day_month_year) end %>)</td>										
					<td><%= item.actp180 %></td>
					<td><%= item.actp280 %></td>
					<td><%= item.actp380 %></td>
					<td><%= item.actp480 %></td>
					<td><%= item.actp580 %></td>
					<td><%= item.actp880 %></td>
					<td><%= item.comment %></td>
					<td><span class="glyphicon glyphicon-<%= if item.f then 'ok' else 'minus' end %>" aria-hidden="true"></span></td>
					<td><% if item.r then %><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span><% end %></td>
  					<td><%= link_to " " , mvalues_edit_path(:mv_id => item.id, :met => unless @met.nil? then @met.id else nil end), :class=> "glyphicon glyphicon-pencil" %>
  						<%= link_to " " , mvalues_destroy_path(:mv_id => item.id), :class=> "glyphicon glyphicon-remove",
  						                 data: { confirm: "Удалить показания за #{item.actdate.to_formatted_s(:day_month_year)} ?" } %></td>  						
				</tr>
			<% end %>	  
	   <% end %>	
	</tbody>
</table>

<center><small><%= if !@mvs.nil? then will_paginate @mvs, renderer: BootstrapPagination::Rails end %></small></center>


