<% provide(:title, 'Показания') %>

<nav class="navbar">
  <ul class="nav nav-pills pull-left">
    <li><%= link_to "Назад", company_path(@mp.company_id, :flr_id => @mp.mesubstation.filial), :class => "glyphicon glyphicon-level-up" %></li>
  </ul>  
</nav>
 	
<ul class="breadcrumb">
  <li><%= link_to "Филиалы", welcome_index_path, :class => "glyphicon glyphicon-home" %></li>		
  <li><%= link_to "Филиал: #{@mp.mesubstation.filial.name}", companies_index_path(:id => @mp.mesubstation.filial,:cp_id => @mp.company_id), :class => "glyphicon glyphicon-tower" %></li>
  <li><%= link_to "Потребитель: #{@mp.company.name}", company_path(@mp.company_id, :flr_id => @mp.mesubstation.filial), :class => "glyphicon glyphicon-lamp" %></li>
  <li class="active"><span class="glyphicon glyphicon-object-align-horizontal" aria-hidden="true"></span><strong><%= "Точка учета: #{@mp.name}, #{@mp.mesubstation.name}, #{@mp.meconname}" %></strong></li>
</ul>
			
<h3 align="center">История показаний <%= image_tag('indicii.png', :alt => "Показания", :width => 60, :height => 30) %></h3>

<table class="table table-striped  table-hover">
	<thead>
		<tr class="info">
		   <th>№</th>
		   <th>Дата актирования</th>
		   <th title="№ счетчика (дата установки счетчика)">Счетчик</th>
		   <th>Активный прием А+</th>
		   <th>Активная отдача А-</th>
		   <th>Реактивный прием R+</th>
		   <th>Реактивная отдача R-</th>
		   <th>Время работы<br> электроустановки, часы</th>
		   <th>Потребление<br> субабонента, кВт*ч</th>
		   <th title="Не анулировать отдачу">Учет<br> А-</th>
		   <th>Комментарий</th>
		   <th title="Включить данные в расчет"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
		   <th title="Расчетный день"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></th>
		</tr>	
	</thead>
	<tbody>					
	  <% i = 0%>
	  <% if !@mvs.nil? %>
			<% @mvs.each do |item| %>
			   <% if item.updated_at > (Time.now.ago($GreenDelay)) %>
			    <tr class="success">
			   <% else %> 	
				<tr>
			   <% end %>		
					<% i = i + 1 %>
					<td><%= if params[:page].nil? then i else (params[:page].to_i - 1) * @perpage + i end  %></td>
					<td><%= item.actdate.to_formatted_s(:day_month_year) %></td>
				    <td><%= number_with_delimiter(item.meter.meternum, delimiter: " ") %> (<%= if !item.meter.relevance_date.nil? then item.meter.relevance_date.to_formatted_s(:day_month_year) end %>)</td>										
					<td><%= number_with_delimiter(item.actp180, delimiter: " ") %></td>
					<td><%= number_with_delimiter(item.actp280, delimiter: " ") %></td>
					<td><%= number_with_delimiter(item.actp380, delimiter: " ") %></td>
					<td><%= number_with_delimiter(item.actp480, delimiter: " ") %></td>
					<td><%= item.trab %></td>
					<td><%= number_with_delimiter(item.dwa, delimiter: " ") %></td>
					<td><% if item.fanulare then %><span class="glyphicon glyphicon-flash" aria-hidden="true"></span><% end %></td>					
					<td><%= item.comment %></td>
					<td><span class="glyphicon glyphicon-<%= if item.f then 'ok' else 'minus' end %>" aria-hidden="true"></span></td>
					<td><% if item.r then %><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span><% end %></td>					
				</tr>
			<% end %>	  
	   <% end %>	
	</tbody>
</table>

<center><small><%= if !@mvs.nil? then will_paginate @mvs, renderer: BootstrapPagination::Rails end %></small></center>


