<% provide(:title, 'Поставщики') %>

<ul class="breadcrumb">
  <li class="active"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><strong><%= "Поставщики" %></strong></li>
</ul>
	    
<h2 align="center">Список поставщиков</h2>

<table class="table table-striped table-hover">
  <thead>
	<tr  class="info">
	  <th><center>№</center></th>
	  <th><center>Наименование</center></th>
	  <th><center>Потребители</center></th>
	  <th><center>Комментарий</center></th>
	</tr>	
  </thead>
  <tbody>
	<% i = 0 %>
	<% if @fpr == 0 %>
	  <% @furns.each do |fr| %>
		<tr>
		   <% i = i + 1 %>	
		   <td align="center"><%= if params[:page].nil? then i else (params[:page].to_i - 1) * @perpage + i end %></td>
		   <td align="center"><%= fr.name %></td>
		   <td align="center"><%= link_to "Открыть", furnizor_path(fr), :class=> "glyphicon glyphicon-folder-open" %></td>
		   <td align="center"><%= fr.comment %></td>
		</tr>
	  <% end %>	
	<% else %>
 	    <tr>
			<% i = i + 1 %>	 
			<td align="center"><%=  i %></td>
			<td align="center"><%= @furn.name %></td>
			<td align="center"><%= link_to "Открыть", furnizor_path(@furn), :class=> "glyphicon glyphicon-folder-open" %></td>
			<td align="center"><%= @furn.comment %></td>
		</tr>
	<% end %>			
  </tbody>
</table>

<% if @fpr == 0 %>
   <center><small><%= will_paginate @furns, renderer: BootstrapPagination::Rails %></small></center>  
<% end %>
