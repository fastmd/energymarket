<% provide(:title, 'Cчетчики') %>
	           
<nav class="navbar">
  <ul class="nav nav-pills pull-left">
    <li><%= link_to "Назад", company_path(@mp.company.id, :flr_id => @mp.furnizor_id), :class => "glyphicon glyphicon-level-up" %></li>
  </ul>  
</nav>

<ul class="breadcrumb">
  <li><%= link_to "Поставщики", welcome_index_path, :class => "glyphicon glyphicon-home" %></li>	
  <li><%= link_to(if @mp.furnizor.name.upcase.include?("FEE") then "Поставщик: #{@mp.furnizor.name} #{image_tag('fee.png', :size => 25)}".html_safe
  	                      elsif @mp.furnizor.name.upcase.include?("FENOSA") then "Поставщик: #{@mp.furnizor.name} #{image_tag('fenosa.png', :size => 25)}".html_safe
  	                      else "Поставщик: #{@mp.furnizor.name}" end, companies_index_path(:id => @mp.furnizor_id, :cp_id => @mp.company_id), :class => "glyphicon glyphicon-piggy-bank") %></li>
  <li><%= link_to "Потребитель: #{@mp.company.name}", company_path(@mp.company_id, :flr_id => @mp.furnizor_id), :class => "glyphicon glyphicon-lamp" %></li>
  <li class="active"><span class="glyphicon glyphicon-object-align-horizontal" aria-hidden="true"></span><strong><%= "Точка учета: #{@mp.name}, #{@mp.mesubstation.name}, #{@mp.clsstation}" %></strong></li>
</ul>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class = "glyphicon glyphicon-wrench">
          <% if @flag=='edit' then %>Редактировать cчетчик<% else %>Добавить cчетчик<% end %>          
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse <%= if (@flag!='edit' && @flag!='add') then "collapse" end %>" role="tabpanel" aria-labelledby="headingOne">	
      <div class="panel-body">
		<h3 align="center">
          <% if @flag=='edit' then %>Редактирование счетчика<% else %>Ввод нового счетчика<% end %>			
		</h3>		
	        <%= form_for(@meter, html: { class: 'form-inline' }) do |f| %>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Тип счетчика</label>							
						<%= select_tag 'thesauru_id', options_for_select( @metertypes, if !@meter.thesauru_id.nil? then @meter.thesauru_id else nil end), include_blank: false, prompt: "Select something", class: "form-control" %>
		   		</div>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Заводской № счетчика</label>	
						<%= number_field_tag 'meternum', @meter.meternum, min: 1, max: 9999999999, step: 1, class: "form-control" %>
		   		</div>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Коэффициент трансформатора тока</label>	
						<%= text_field_tag 'koeftt', @meter.koeftt, class: "form-control" %>
		   		</div>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Коэффициент трансформатора напряжения</label>	
						<%= text_field_tag 'koeftn', @meter.koeftn, class: "form-control" %>
		   		</div>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Дата монтажа</label>	
						<%= date_field_tag 'relevance_date',@meter.relevance_date, class: "form-control" %>
		   		</div>
		   		<div class="form-group">		
		   				<label for='comment' class="control-label">Комментарий</label>						
						<%= text_field_tag 'comment', @meter.comment, placeholder: 'Комментарий...',  :size=>"50", class: "form-control" %>
		   		</div>						
		   		<div class="form-group">		
		   				<label for='f' class="control-label"><span class="glyphicon glyphicon-ok" aria-hidden="true">Активный</span></label>						
						<%= check_box_tag 'f', 'yes', @meter.f, class: "form-control" %>
	            </div>
	  			<%= hidden_field_tag :mpoint_id, @meter.mpoint_id %>
	  			<%= hidden_field_tag :id, @meter.id %>
	  			<div  align="center">
					  <%= button_tag "Сохранить", type: 'submit', class: "btn btn-default glyphicon glyphicon-ok pull-center", 
					                data: { confirm: "Сохранить счетчик #{@meter.meternum}?" } %>	                
					  <%= button_tag "Отмена", type: "submit", name: "cancel", value: true, class: "btn btn-default glyphicon glyphicon-remove pull-center" %>
	            </div> 
		<% end %>
      </div>
    </div>
  </div>  
</div>

<h2 align="center">Счетчики <%= image_tag('meter.png', :alt => "Счетчики", :width => 40, :height => 40) %></h2> 
           
<table class="table table-striped  table-hover">
		<thead>
			<tr class="info">
			   <th>№</th>
			   <th>Тип счетчика</th>
			   <th>№ счетчика</th>
			   <th>Коэффициент по току</th>
			   <th>Коэффициент по напряжению</th>
			   <th>Коэффициент расчетный</th>
			   <th>Дата монтажа</th>
			   <th>Показания</th>
			   <th>Комментарий</th>
			   <th><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
			   <th>.........</th>	   
			</tr>	
		</thead>
		<tbody>
			   <% i = 0%>
			   <% @met.each do |item| %>
			   <% if item.updated_at > (Time.now.ago($GreenDelay)) %>
			    	<tr class="success">
			   <% else %> 	
					<tr>
			   <% end %>	
						<% i = i + 1 %>
						<td><%= if params[:page].nil? then i else (params[:page].to_i - 1) * @perpage + i end %></td>						
						<td><%= if item.thesauru_id then item.thesauru.cvalue end %></td>
						<td><%= item.meternum %></td>
						<td><%= item.koeftt %></td>
						<td><%= item.koeftn %></td>
						<td><%= item.koefcalc %></td>
						<td><%= if !item.relevance_date.nil? then item.relevance_date.to_formatted_s(:day_month_year) end %></td>						
  						<td><%= link_to image_tag('indicii.png', :alt => "Показания", :width => 30, :height => 20), mpoint_path(@mp,:met=>item.id) %>
  						    <%= link_to image_tag('Excel-icon.png', :alt => "XLSX", :width => "20", :height => "20"), meter_path(item,format: "xlsx") %>
  						    <%= link_to image_tag('Apps-Pdf-B-icon.png', :alt => "PDF", :width => "20", :height => "20"), meter_path(item,format: "pdf") %></td>
  						<td><%= item.comment %></td>
  						<td><span class="glyphicon glyphicon-<%= if item.f then 'ok' else 'minus' end %>" aria-hidden="true"></span></td>
  						<td><%= link_to " " , meters_edit_path(:mt_id => item.id), :class=> "glyphicon glyphicon-pencil" %>
  						    <%= link_to " " , meters_destroy_path(:mt_id=>item.id), :class=> "glyphicon glyphicon-remove",
  						                 data: { confirm: "Удалить счетчик № #{item.meternum}?" } %></td>       						
					</tr>		
				<% end %>			
		</tbody>
</table>

<center><small><%= if !@met.nil? then will_paginate @met, renderer: BootstrapPagination::Rails end %></small></center>
