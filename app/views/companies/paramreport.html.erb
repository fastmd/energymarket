  		</thead>
  		<tbody>
      <% end %>
	   <% if item.updated_at > (Time.now.ago($GreenDelay)) %>
		 <tr class="success">
	   <% else %> 	
		 <tr>
	   <% end %>
      	 <td><%= j %></td>
