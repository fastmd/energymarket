<% provide(:title, 'Отчет') %>

<% if @fpr > 5 then @fr = @cp.furnizor
	           else @fl = @cp.filial end %>

<nav class="navbar">
  <ul class="nav nav-pills nav-pillspull-right">
    <li><%= if (@fpr > 5) 
    	        then link_to "Назад", furnizor_path(@fr) 
    	        else link_to "Назад", filial_path(@fl) end %></li>
    <li><%= link_to image_tag('Excel-icon.png', :alt => "XLSX", :width => "25", :height => "25"), '#' %></li>
    <li><%= link_to image_tag('Apps-Pdf-B-icon.png', :alt => "PDF", :width => "25", :height => "25"), '#'  %></li>
    <li><%= form_tag companys_report_path(:id => @id) do %>
	            <%= date_field_tag :date_for_report, @ddate %>
                <%= image_submit_tag("vjuh-nevisp.png",class: 'submit_button',:alt => "Пересчет") %>
                <% end %></li>    
  </ul>  
</nav>
				
<h3 align="center">LISTA</h3> 
<h4 align="center"><%= "de calcul a intrarii energiei electrice la #{@cp.name}" %></h4>
<h4 align="center"><%= "pentru luna #{@luna} anul #{@ddate.year}" %></h4>
	
<table class="table table-striped table-condensed">	
  <thead>
    <tr class="success">
      <th>Nr</th>
      <th>RRE,SE si liniilor</th>      
      <th>Punctul de evidenta</th>
      <th></th>
      <th>N contor.</th>
      <th><%= "Indicatii \n #{@ddatee2.to_formatted_s(:day_month_year)}" %></th>
      <th><%= "Indicatii \n #{@ddateb2.to_formatted_s(:day_month_year)}" %></th> 
      <th>Diferenta indicat.</th>
      <th>Coeficient contor.</th>
      <th>Energie kWh</th> 
    </tr>  
    <tr class="info">
      <th>1</th>
      <th>2</th>      
      <th>3a</th>
      <th>3b</th>
      <th>4</th>
      <th>5</th>
      <th>6</th>
      <th>7</th> 
      <th>8</th>
      <th>9</th> 
    </tr>
  </thead>
  <tbody>
    <% @report.each do |item| %>
      <tr>
        <td><%= item[0] %></td>    	
        <td><%= item[1] %></td>        	
        <td><%= item[2] %></td>
        <td><%= %></td>
        <td><%= item[3] %></td>
        <td><%= item[4] %></td>
        <td><%= item[5] %></td>
        <td><%= item[6] %></td>
        <td><%= item[7] %></td>
        <td><%= item[8] %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

