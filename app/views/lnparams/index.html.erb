<table  class="table table-striped  table-hover table-condensed">
		<thead>
			<tr class="info">
			   <th>№</th>
			   <th>L</th>			   
			   <th>R</th>
			   <th>ro</th>
			   <th>Kscr</th>
			   <th>Ktr</th>
			   <th>Kpeb</th>
			   <th>q</th>
			   <th>Kf</th>
			   <th>Провод</th>
			   <th>mp</th>
			   <th>Комментарий</th>
			   <th><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
			   <th>.........</th>			   
			</tr>	
		</thead>
		<tbody>
   			<% i = 0%>
			<% @lnparams.each do |item| %>
			   <% if item.updated_at > (Time.now.ago($GreenDelay)) %>
			    	<tr class="success">
			   <% else %> 	
					<tr>
			   <% end %>
						<% i = i + 1 %>						
						<td><%= if @page.nil? then i else (@page.to_i - 1) * $PerPage + i end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.l %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.r %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.ro %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.k_scr %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.k_tr %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.k_peb %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.q %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.k_f %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.mark %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.mpoint_id %><% if item.f == false then %></em><% end %></td>
						<td><% if item.f == false then %><em><% end %><%= item.comment %><% if item.f == false then %></em><% end %></td>
                        <td><span class="glyphicon glyphicon-<%= if item.f then 'ok' else 'minus' end %>" aria-hidden="true"></span></td>
                        <td><%= link_to " " , "#", :class=> "glyphicon glyphicon-pencil" %>
  						    <%= link_to " " , "#", :class=> "glyphicon glyphicon-remove",
  						                 data: { confirm: "Удалить линию #{item.mark} ?" } %></td>  
 <!--                     <td><%= link_to " " , trparams_edit_path(:id => item.id, :page => @page), :class=> "glyphicon glyphicon-pencil" %>
  						    <%= link_to " " , trparams_destroy_path(:id => item.id, :page => @page), :class=> "glyphicon glyphicon-remove",
  						                 data: { confirm: "Удалить линию #{item.mark} ?" } %></td> -->
					</tr>		
			<% end %>			
		</tbody>
</table>

<center><small><%= if !@lnparams.nil? then will_paginate @lnparams, renderer: BootstrapPagination::Rails end %></small></center>

